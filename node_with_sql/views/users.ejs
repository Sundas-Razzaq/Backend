<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show users</title>
</head>

<body>
    <table>
        <tr>
            <th>id</th>
            <th>userid</th>
            <th>username</th>
            <th>email</th>
            <th>password</th>
        </tr>

        <% for(user of users) { %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.userId %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.password %>
                </td>
                <td>
                    <form action="/user/<%= user.userId %>/edit" method="get">
                        <button>edit username</button>
                    </form>
                    <form action="/user/<%= user.userId %>?_method=DELETE" method="post">
                        <button type="submit">delete</button>
                    </form>

                </td>
                <td>

                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>